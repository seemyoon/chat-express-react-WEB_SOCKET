    "express-session": "^1.18.1",
    "mongoose": "^8.6.2",
    "nodemailer": "^6.9.15",
    "nodemailer-express-handlebars": "^6.1.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1"
